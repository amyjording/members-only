<p id="notice"><%= notice %></p>

<h1>In The Know - Secret posts</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <ul class="posts">
        <% @posts.each do |post| %>
        <li><%= post.content %> | by
          <% if logged_in? %>
            <span class="postwho"><%= post.user.name %></span>
              <% else %>
              <span class="postwho">Who knows?</span>
              <% end %>
        </li>
      <% end %>
    </ul>
<br>
<% if logged_in? %>
    <%= link_to 'New Post', new_post_path %>
  <% end %>
</div>
</div>
